<%= turbo_frame_tag "#{tag}_brewery_list_frame", data: { turbo_action: "advance" } do %>

<p> Number of <%= tag %> breweries: <%= breweries.count %> </p>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Founded</th>
        <th>Beers</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% breweries.each do |brewery| %>
        <tr>
          <td><%= link_to brewery.name, brewery, data: { turbo_frame: "_top" } %></td>
          <td><%= brewery.year %></td>
          <td><%= brewery.beers.count %></td>
          <td><%= round(brewery.average_rating) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
