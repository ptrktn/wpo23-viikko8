<%= turbo_frame_tag "#{status}_brewery_list_frame", data: { turbo_action: "advance" } do %>

<p> Number of <%= status %> breweries: <%= breweries.count %> </p>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Founded</th>
        <th>Beers</th>
        <th>Rating</th>
		<th>Delete</th>
      </tr>
    </thead>
    <tbody id="<%= status %>_brewery_rows">
      <% breweries.each do |brewery| %>
	    <%= render "brewery_row", brewery: brewery %>
      <% end %>
    </tbody>
  </table>

<% end %>
